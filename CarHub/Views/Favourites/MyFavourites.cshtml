@model IEnumerable<CarAdIndexVM>

@{
    ViewData["Title"] = "My Favorites";
}

<h2 class="mb-4">My Favorites</h2>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">

                <img src="@car.ImageUrl"
                     class="card-img-top"
                     style="height: 220px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model (@car.Year)</h5>
                    <p class="card-text fw-bold text-primary">@car.Price.ToString("N0") €</p>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="CarAds"
                       asp-action="Details"
                       asp-route-id="@car.Id"
                       class="btn btn-outline-primary w-100">
                        View Details
                    </a>
                </div>

            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <p>You have no favorite cars yet.</p>
}
